<% action_url = band.persisted? ? band_url(band) : bands_url  %>
<% http_method = band.persisted? ? "PATCH" : "POST"  %>
<% button_value = band.persisted? ? "Edit Band" : "Create New Band"%>

<form action="<%= action_url %>" method="POST">
    <input type="hidden" name="_method" value="<%= http_method %>">
    <input 
        type="hidden"
        name="authenticity_token"
        value="<%= form_authenticity_token %>">

    <label for="band-name">Name</label>
    <input type="text" name="band[name]" id="band-name" value="<%= band.name %>">

    <input type="submit" value="<%= button_value %>">

</form>